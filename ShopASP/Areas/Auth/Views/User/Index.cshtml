@model List<User>
@{
    ViewData["Title"] = "Users";
}

<div class="text-center">
    <h1 class="display-4">Users</h1>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <td></td>
            <td>Id</td>
            <td>E-mail</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
            <tr>
                <td></td>
                <td>@user.Id</td>
                <td>@user.Email</td>
                <td>
                    <div class="d-flex">
                        <a asp-area="Auth" asp-action="Edit" asp-controller="User" asp-route-id="@user.Id" class="btn btn-outline-primary">Edit</a>
                        <form method="post" asp-area="Auth" asp-action="Delete" asp-controller="User" asp-route-id=" @user.Id">
                            <button style="margin-left:5px" type="submit" class="btn btn-outline-danger">Delete</button>
                        </form>
                    </div
                ></td>
            </tr>
        }
    </tbody>
</table>
    <a asp-area="Admin" asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">Return</a>